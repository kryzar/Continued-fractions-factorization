% Environnements mathématiques
\newcounter{theoremcounter}[section]
\renewcommand\thetheoremcounter{\arabic{section}.\arabic{theoremcounter}}
\theoremstyle{plain} % default is plain
\newtheorem{corollaire}[theoremcounter]{Corollaire}
\newtheorem*{corollaire*}{Corollaire}
\newtheorem{fait}[theoremcounter]{Fait}
\newtheorem*{fait*}{Fait}
\newtheorem{lemme}[theoremcounter]{Lemme}
\newtheorem*{lemme*}{Lemme}
\newtheorem{proposition}[theoremcounter]{Proposition}
\newtheorem*{proposition*}{Proposition}
\newtheorem{theoreme}[theoremcounter]{Théorème}
\newtheorem*{theoreme*}{Théorème}
\newtheorem{enoncefaux}[theoremcounter]{Énoncé faux}
\newtheorem*{enoncefaux*}{Énoncé faux}
\theoremstyle{definition} % default is definition
\newtheorem{exemple}[theoremcounter]{Exemple}
\newtheorem*{exemple*}{Exemple}
\newtheorem{definition}[theoremcounter]{Définition}
\newtheorem*{definition*}{Définition}
\newtheorem{notation}[theoremcounter]{Notation}
\newtheorem*{notation*}{Notation}
\newtheorem{question}[theoremcounter]{Question}
\newtheorem*{question*}{Question}
\newtheorem{remarque}[theoremcounter]{Remarque}
\newtheorem*{remarque*}{Remarque}

% Commande pour se mettre des notes en rouge et en gras dans le document
\newcommand{\NTS}[1]{\textcolor{red}{\textbf{#1}}} % NTS = Note To Self

